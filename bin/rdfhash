#!/usr/bin/env bash

SCRIPT_PATH="$( cd -- "$(dirname "$0")" >/dev/null 2>&1 ; pwd -P )"
RDFHASH_PYTHON_PATH="$SCRIPT_PATH/../package/cli.py"

# Use python3.11 if installed.
if which python3.11 > /dev/null 2>&1; then
    python3.11 $RDFHASH_PYTHON_PATH "$@"
# Use python3.10 if installed.
elif which python3.10 > /dev/null 2>&1; then
    python3.10 $RDFHASH_PYTHON_PATH "$@"
# Throw error if dependencies are not installed.
else
    printf "ERROR: python3.10 / python3.11 are required to run script 'rdfhash'\n"
    exit 1
fi
